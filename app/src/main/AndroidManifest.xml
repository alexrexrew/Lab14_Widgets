<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lab14"
        tools:targetApi="31">

        <!-- Actividad Principal de la Aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Lab14">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de Detalle (Para el botón del SimpleWidget) -->
        <activity
            android:name=".DetailActivity"
            android:exported="true"
            android:theme="@style/Theme.Lab14" />

        <!-- NUEVAS Activities para el Widget Personalizado (Ejercicio Final) -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.Lab14" />

        <activity
            android:name=".NewTaskActivity"
            android:exported="true"
            android:theme="@style/Theme.Lab14" />

        <!-- Proveedor del Widget Simple (SimpleWidget) -->
        <receiver android:name=".SimpleWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/simple_widget_info" />
        </receiver>

        <!-- NUEVO: Proveedor del Widget Personalizado (CustomAppWidget) -->
        <receiver android:name=".CustomAppWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/custom_app_widget_info" />
        </receiver>

    </application>
</manifest>